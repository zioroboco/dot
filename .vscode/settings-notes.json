{
  "todo-tree.tree.showCountsInTree": true,

  // "zenMode.hideTabs": false,
  "zenMode.hideStatusBar": true,
  "zenMode.hideLineNumbers": true,
  "editor.fontSize": 16,

  // "pasteImage.basePath": "${currentFileDir}/images",
  "memo.links.rules": [
    {
      "rule": "([12]\\d{3}-(0[1-9]|1[0-2])-(0[1-9]|[12]\\d|3[01]))\\.md$",
      "folder": "daily"
    }
  ],

  "julia.persistentSession.enabled": false,
  // "julia.persistentSession.shell": "/usr/local/bin/zsh",
  // "julia.persistentSession.shellExecutionArgument": "-c",
  // "julia.persistentSession.tmuxSessionName": "notes-repl",

  "search.showLineNumbers": true,
  "workbench.editor.showTabs": true,
  "breadcrumbs.enabled": false,

  "pasteImage.path": "${currentFileDir}",

  "editor.codeLens": false,

  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 500,
  // "zenMode.hideLineNumbers": true,
  // "zenMode.hideTabs": false,

  "files.exclude": {
    "archive":  true,
    "people":  false,
    "daily/2020-*":  true,
    "daily/2021-01-*":  true,
    "daily/2021-02-*":  true,
    "daily/2021-03-*":  true,
    "daily/2021-04-*":  true,
    "daily/2021-05-*":  true,
    "daily/2021-06-0*":  true,
    "daily/2021-06-1*":  true,
    "daily/2021-06-2*":  true,
    ".vscode": true,
    // "Manifest.toml": true,
    // "Project.toml": true,
    ".npmrc": true,
    "**/node_modules": true,
    "**/yarn.lock": true,
    "**/package.json": true,
    "go.mod": true
  },

  "todo-tree.tree.buttons.viewStyle": true,
  "todo-tree.tree.expanded": true,

  "todo-tree.general.statusBar": "top three",
  "todo-tree.filtering.excludeGlobs": [
    ".vscode",
    "**/archive/**",
    "**/node_modules/*"
  ],
  "todo-tree.filtering.includeGlobs": ["**/*.md"],
  "todo-tree.filtering.includeHiddenFiles": false,
  "todo-tree.tree.scanMode": "workspace",
  "todo-tree.general.showIconsInsteadOfTagsInStatusBar": true,

  "editor.renderLineHighlight": "none",
  "editor.matchBrackets": "never",
  "editor.rulers": [80],

  "readTime.wordsPerMinute": 200,
  "readTime.enabled": true,

  "[markdown]": {
    "editor.defaultFormatter": "fcrespo82.markdown-table-formatter",
    "editor.tabSize": 2,
    "editor.wordWrapColumn": 80,
    "editor.wordWrap": "wordWrapColumn"
  },

  "memo.decorations.enabled": true,

  "todo-tree.general.enableFileWatcher": true,
  "todo-tree.general.fileWatcherGlob": "**/*.md",
  "todo-tree.tree.autoRefresh": true,

  "todo-tree.regex.regex": "((\\*|//|#|<!--|;|/\\*|^)\\s*($TAGS):?\\s|^\\s*- \\[ \\])",
  "todo-tree.general.tags": ["* [ ]", "+ [ ]", "- [ ]"],
  "todo-tree.general.tagGroups": {
    "TODO": ["- [ ]"],
    "URGENT": ["+ [ ]"],
    "QUESTION": ["* [ ]"]
  },

  // icons: https://microsoft.github.io/vscode-codicons/dist/codicon.html
  "todo-tree.highlights.customHighlight": {
    "URGENT": {
      "icon": "flame",
      "foreground": "#E44D26", // red
      "fontWeight": "600",
      "gutterIcon": true
    },
    "TODO": {
      "icon": "chevron-right",
      "foreground": "black",
      "fontWeight": "600",
      "gutterIcon": true
    },
    "QUESTION": {
      "icon": "question",
      "foreground": "#42A5F5", // readme blue
      "fontWeight": "600",
      "gutterIcon": true
    }
  },

  "editor.renderWhitespace": "none",
  "memo.backlinksPanel.enabled": true,
  "workbench.statusBar.visible": true,
  "workbench.colorTheme": "Gray Matter Light",
  "workbench.colorCustomizations": {
    "workspaceInStatusBar.text": "#393939",
    "tab.activeBackground": "#f5f5f5",
    "editorGroupHeader.border": "#f5f5f5",
    "tab.inactiveBackground": "#eaeaea",
    "tab.border": "#eaeaea",
    "editorGroupHeader.tabsBackground": "#eaeaea",
    "editorGroupHeader.tabsBorder": "#eaeaea",
    "tab.lastPinnedBorder": "#eaeaea",

    "editorOverviewRuler.border": "#00000000",
    "sideBarSectionHeader.background": null,
    "list.focusBackground": null,
    "titleBar.activeBackground": null,
    "titleBar.inactiveBackground": null,
    "editorRuler.foreground": null,
    "peekViewEditor.background": null,
    "editor.background": null,
    "panel.background": null,
    "sideBar.background": null,
    "statusBarItem.remoteBackground": null,
    "activityBarBadge.background": null,
    "list.activeSelectionForeground": null,
    "list.inactiveSelectionForeground": null,
    "list.highlightForeground": null,
    "scrollbarSlider.activeBackground": null,
    "editorSuggestWidget.highlightForeground": null,
    "textLink.foreground": null,
    "progressBar.background": null,
    "pickerGroup.foreground": null,
    "tab.activeBorder": null,
    "notificationLink.foreground": null,
    "editorWidget.resizeBorder": null,
    "editorWidget.border": null,
    "settings.modifiedItemIndicator": null,
    "settings.headerForeground": null,
    // "panelTitle.activeBorder": null,
    "panelTitle.activeBorder": "#00000000", // hide underline on panel title
    "breadcrumb.activeSelectionForeground": null,
    "menu.selectionForeground": null,
    "menubar.selectionForeground": null,
    "statusBar.background": null,
    "statusBar.foreground": null,
    "statusBar.noFolderBackground": null,
    "statusBar.debuggingBackground": null
  },

  "cSpell.enableFiletypes": ["markdown", "!typescript", "!go"],
  "cSpell.allowCompoundWords": true,
  "cSpell.words": [
    "okrs",
    "posix",
    "roli",
    "unprefixed"
  ],
  "cSpell.ignoreRegExpList": ["@[a-zA-Z0-9-]+", "\\[.*\\]", "`[^`]*`"],
  "cSpell.language": "en-GB,en"
}
